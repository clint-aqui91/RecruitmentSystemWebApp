@model RecruitmentSystemWebApplication.Models.LogInModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "Log In";
}
<h1>@ViewData["Title"]</h1>
<hr />

<body>

    <h4 class="text-center fw-bolder">Input Credentials</h4>

    <div class="row">

        <form asp-action="LogIn" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row mt-3">
                <label asp-for="Username" class="form-label fw-bold col-sm"></label>
                <input asp-for="Username" placeholder="Enter Username" class="form-control col-sm" />
                <span asp-validation-for="Username" class="text-danger col-sm"></span>
            </div>

            <div class="form-group row mt-3">
                <label asp-for="Password" class="form-label fw-bold col-sm"></label>
                <input asp-for="Password" placeholder="Enter Password" class="form-control col-sm" />
                <span asp-validation-for="Password" class="text-danger col-sm"></span>
            </div>

            <!-- https://getbootstrap.com/docs/5.0/components/buttons/ -->
            <div class="form-group text-center mt-4">
                <input type="submit" value="Log In" class="btn btn-primary fw-bold" />
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }