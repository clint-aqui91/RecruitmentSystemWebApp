@model RecruitmentSystemWebApplication.Models.ChangePasswordModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "Change Password";
}
<h1>@ViewData["Title"]</h1>
<hr />

<body>
    <h4 class="text-center fw-bolder">Change Password</h4>
    @if (Model.PasswordChangeAlertID == 1)
    {
        <div class="alert alert-success">
            @Model.SuccessfulPasswordChangeMessage
        </div>
    }

    @if (Model.PasswordChangeAlertID == 2)
    {
        <div class="alert alert-danger">
            @Model.UnsuccessfulPasswordChangeMessage
        </div>
    }

    <div class="row">
        <form asp-action="ChangePassword" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Username" />

            <div class="form-group row mt-3">
                <label asp-for="CurrentPassword" class="form-label fw-bold col-sm"></label>
                <input asp-for="CurrentPassword" placeholder="Enter Password" class="form-control col-sm" />
                <span asp-validation-for="CurrentPassword" class="text-danger col-sm"></span>
            </div>

            <div class="form-group row mt-3">
                <label asp-for="NewPassword" class="form-label fw-bold col-sm"></label>
                <input asp-for="NewPassword" placeholder="Enter Password" class="form-control col-sm" />
                <span asp-validation-for="NewPassword" class="text-danger col-sm"></span>
            </div>

            <div class="form-group row mt-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold col-sm"></label>
                <input asp-for="ConfirmPassword" placeholder="Enter Password" class="form-control col-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger col-sm"></span>
            </div>

            <!-- https://getbootstrap.com/docs/5.0/components/buttons/ -->
            <div class="form-group text-center mt-4">
                <input type="submit" value="Change Password" class="btn btn-primary fw-bold" />
            </div>
        </form>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }